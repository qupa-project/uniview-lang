import "experimental/time.uv" as Time;

fn println(dt: Time.DateTime) {
	let time := dt.time;

	let pm := time.hours > 12;
	if (pm) {
		time.hours = time.hours - 12;
	}

	printf("%i:%i:%i", time.hours, time.minutes, time.seconds);

	if (pm) {
		printf("%s", " PM");
	} else {
		printf("%s", " AM");
	}

	let date := dt.date;
	printf(" %i/%i/%i %i %i\n", date.day, date.month, date.year, date.weekDay, date.days);

	return;
}

fn main(): int {
	let now := Time.Now();
	printf("Unix   : %i\n", now);

	printf("%s", "UTC    : ");
	let dt := Time.GetDateTime(now);
	println(dt);

	dt = Time.GetDateTime(now + 10*60*60);
	printf("%s", "UTC+10 : ");
	println(dt);

	return 0;
}