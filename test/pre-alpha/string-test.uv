import "string.uv";

fn main(): int {
	let a = String("Hello");
	let b = String(" World");
	String.Append(@a, $b);
	puts($a);
	String.Append(@a, b);
	puts($a);

	let s = cast#[u64](0);
	let e = cast#[u64](3);

	let t = String.Slice($a, s, e);
	puts($a);
	puts($t);

	String.Delete(t);
	t = String.Slice(@a, s, e);
	puts($a);
	puts($t);

	String.Delete(a);
	String.Delete(t);
	return 0;
}
